// This file contains a list of all the processes which procman should
// run on the robot.

:process : object {
    host = "localhost";
    auto-restart = "true";
    restart-delay-ms = "500";
    auto-start = "true";
    name = "unknown";
}

// RobotDriver
proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.robot.robot.RobotDriver";
    name = "Robot Driver";
}

proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.robot.robot.EspeakDaemon";
    name = "Espeak Daemon";
}

// Camera Driver
proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.camera.CameraDriver";
    name = "Camera Driver";
}

// AprilTag-based Classifier
proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.classify.TagClassifier -c $PROBCOG_HOME/config/tags.config";
    name = "AprilTag Classifier";
}

