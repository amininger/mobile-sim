// Soar Navigation Control
proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.commands.CommandInterpreter";
    name = "Soar Command Controller";
}

// PIMU XXX /dev/pimu
proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.robot.pimu.PIMU -d /dev/ttyUSB1";
    name = "PIMU";
}

// PIMU Pose
proc# : process {
    cmd = "$JAVA $JAVA_OPTS_64 probcog.robot.pimu.PIMUPose";
    name = "PIMUPose";
}

// Hokuyo Driver
proc# : process {
    cmd = "$HOME/april/bin/hokuyo --channel HOKUYO_LIDAR";
    name = "Hokuyo Driver";
 }


