source default.soar


sp {simple-bot*Apply*init-agent
	(state <s> ^operator.name init-agent)
-->
	(<s> ^name simple-bot
			 ^current-command <c1>)
	(<c1> ^control-law.name move
				^next-command <c2>)
	(<c2> ^control-law.name turn
				^next-command <c1>)
}


sp {do-command*apply*send-command*move
    (state <s> ^name do-command
     ^operator <o>)
        (<o> ^name send-command
         ^command.control-law.name move)
        -->
        (<s> ^ol-command <move>)
	(<move> ^name drive-forward
					^termination-condition <dist>)
	(<dist> ^name distance
         ^parameters.distance 1.0)
}
sp {do-command*apply*send-command*turn
    (state <s> ^name do-command
     ^operator <o>)
        (<o> ^name send-command
         ^command.control-law.name turn)
        -->
        (<s> ^ol-command <turn>)
	(<turn> ^name turn
					^termination-condition <rot>)
	(<rot> ^name rotation
        ^parameters.yaw 1.5708)
}
