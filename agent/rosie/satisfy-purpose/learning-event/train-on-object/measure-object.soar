sp {train-on-object*propose*measure-object
   (state <s> ^name train-on-object
              ^sense <sense>
              ^example-object <obj>
              ^topstate.interaction.stack.segment.purpose.parameters <p>)
   (<p> -^measured <sense>)
-->
   (<s> ^operator <o> + =)
   (<o> ^name measure-object
        ^sense <sense>
        ^example-object <obj>)
}

sp {train-on-object*apply*measure-object*perform-action
   (state <s> ^name train-on-object
              ^operator <o>
              ^topstate.action-goal-stack <stack>)
   (<o> ^name measure-object
        ^sense <sense>
        ^example-object <obj>)
-->
   (<stack> ^action-goal <measure-goal>)
   (<measure-goal> ^name measure-object
                   ^parameters <p>)
   (<p> ^object <obj>
        ^train-sense <sense>)
}