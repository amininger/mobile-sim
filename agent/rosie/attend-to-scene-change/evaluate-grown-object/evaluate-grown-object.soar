sp {attend-to-scene-change*apply*evaluate-grown-object*mark-for-copying
   (state <s> ^name attend-to-scene-change
              ^operator <o>)
   (<o> ^name evaluate-grown-object
        ^object <obj>)
-->
   (<obj> ^mark-for-copying true)
}

sp {attend-to-scene-change*apply*evaluate-grown-object*mark-recheck-growth
   (state <s> ^name attend-to-scene-change
              ^operator <o>
              ^topstate.agent-params.recheck-growth-delay <d>
              ^io.input-link.time.seconds <t>)
   (<o> ^name evaluate-grown-object
        ^object.differences <diffs>)
-->
   (<diffs> ^recheck-growth-at (+ <t> <d>))
}

sp {attend-to-scene-change*apply*evaluate-grown-object*remove*old*recheck-growth
   (state <s> ^name attend-to-scene-change
              ^operator <o>
              ^io.input-link.time.seconds <t>)
   (<o> ^name evaluate-grown-object
        ^object.differences <diffs>)
   (<diffs> ^recheck-growth-at {<r> < <t>})
-->
   (<diffs> ^recheck-growth-at <r> -)
}