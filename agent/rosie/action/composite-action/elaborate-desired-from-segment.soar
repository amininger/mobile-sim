sp {composite-action*elaborate*desired*from*segment
   (state <s> ^problemspace action
   	      -^problemspace learning
	      ^action-type composite
	      ^superstate.name action
	      ^topstate.interaction.stack.segment.desired-achievement-goal <des>)
-->
   (<s> ^segment-desired <des>)
   (<s> ^desired <newd>)
}

sp {composite-action*elaborate*desired*from*segment*relation-predicate
   (state <s> ^problemspace action
   	      -^problemspace learning
	      ^action-type composite
	      ^segment-desired <des>
	      ^desired <newd>)
   (<des> ^relation-predicate <rpred>)
-->
   (<newd> ^track-relation <rpred>)
}

sp {composite-action*elaborate*desired*from*segment*state-predicate
   (state <s> ^problemspace action
   	      -^problemspace learning
	      ^action-type composite
	      ^segment-desired <des>
	      ^desired <newd>)
   (<des> ^state-predicate <rpred>)
-->
   (<newd> ^achieve-state <rpred>)
}