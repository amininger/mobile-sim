sp {stash-object*propose*count-objects
   (state <s> ^name stash-object
              ^bin-counts.bin-count <bc>
              ^topstate.prepositions.prep <on>
             -^action-goal.action-goal.name move-object
             -^action-goal.achieved-subgoal.name move-object)
   (<bc> ^bin.id <bin-id>
        -^counted <id>)
   (<on> ^name on
         ^pair <p>)
   (<p>  ^a <id>
         ^b <bin-id>)
-->
   (<s> ^operator <o> + > =)
   (<o> ^name count-object
        ^object <id>
        ^bin-count <bc>)
}

sp {stash-object*apply*count-objects
   (state <s> ^name stash-object
              ^operator <o>)
   (<o> ^name count-object
        ^object <id>
        ^bin-count <bc>)
   (<bc> ^count <c>)
-->
   (<bc> ^counted <id>
         ^count <c> -
         ^count (+ <c> 1))
}
   