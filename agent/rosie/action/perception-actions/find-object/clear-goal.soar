sp {find-object*propose*create-clear-goal-subgoal
   (state <s> ^name find-object
              ^goal-location.id <goal-id>
              ^topstate.object <obj>
              ^topstate.prepositions.prep <on>
             -^action-goal.action-goal)
   (<obj> ^id <obj-id>)
   (<on> ^name on
         ^pair <p>)
   (<p> ^a <obj-id>
        ^b <goal-id>)
-->
   (<s> ^operator <o> + > =)
   (<o> ^name create-clear-goal-subgoal
        ^parameters <p>)
   (<p> ^object <obj>)
}

sp {find-object*apply*create-clear-goal-subgoal
   (state <s> ^name find-object
              ^operator <o>
              ^action-goal <goal>)
   (<o> ^name create-clear-goal-subgoal
        ^parameters <p>)
-->
   (<goal> ^action-goal <subgoal>)
   (<subgoal> ^name stash-object
              ^parameters <p>)
   (interrupt)
}

