#JK
sp {index-parameter*propose*lookup-preposition
   (state <s> ^name index-parameter
              ^parameter <p>)
   (<p> ^type preposition
        ^lexical <prep>
       -^result)
-->
   (<s> ^operator <o> + =)
   (<o> ^name lookup-preposition
   	 ^type <prep>)
}

sp {index-parameter*elaborate*lookup-preposition
   (state <s> ^name index-parameter
              ^found-prep <fprep>
              ^parameter <p>)
   (<fprep> ^predicate <pre> ^type <prep>)
   (<p> ^type preposition
        ^lexical <prep>)
-->
   (<p> ^result <prep>)
}

